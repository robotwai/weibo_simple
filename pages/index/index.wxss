/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  align-items: flex-start
}
.icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 200rpx;
}
.card{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: #eee 1rpx solid;
  padding: 10rpx 10rpx 10rpx 10rpx;
  align-items: center;
}
.item_header{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.name_time{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.function_container{
    display:flex;
    flex-wrap: wrap;
    width:100%;
}
.function_item{
    width:33%;
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    font-size:12px;
    box-sizing:border-box;
    padding-bottom:10px;
    padding-top:10px;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.function_img{
    max-width: 180rpx;
    height:180rpx;
}
.post {
    width: 180rpx;
    height: 180rpx;
    float: right;
    background-color: #ffffff;
    position: fixed;
    bottom: 20px;
    right: 10px;  
    border: 0 solid #ffffff;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
    align-content: center;
}
