.contain{
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 100%;
  background: #eee;
}
.title{
  background: white;
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.name_sign{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.icon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 240rpx;
  margin-left: 24rpx;
}
.name{
  font-size: 42rpx;
  color: black
}
.sign_content{
  font-size: 38rpx;
  color: rgb(37, 33, 33);
}
.item_title{
  margin-top: 20rpx;
  padding-left: 24rpx;
  background: white;
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item_icon{
  width:80rpx;
  height: 80rpx;
}
.follow{
  font-size: 42rpx;
  color: black;
  margin-left: 24rpx;
}